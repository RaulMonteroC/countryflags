<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/country_ittem_size">

    <ImageView android:id="@+id/countryFlag"
               android:layout_width="@dimen/flag_size"
               android:layout_height="100dp"
               tools:srcCompat="@drawable/dominican_republic"
               android:padding="@dimen/normal_padding"/>

    <TextView android:id="@+id/countryName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@id/countryFlag"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              tools:text="Dominican Republic"
              android:textSize="@dimen/big_text_size"/>

</android.support.constraint.ConstraintLayout>